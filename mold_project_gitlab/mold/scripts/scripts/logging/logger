INTERNAL_SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
INTERNAL_LOG_SCRIPT=$INTERNAL_SCRIPT_DIR/to_system_log

function log_debug () {
    LOG_DEFAULT_PRIORITY=debug $INTERNAL_LOG_SCRIPT
}

function log_error () {
    LOG_DEFAULT_PRIORITY=err $INTERNAL_LOG_SCRIPT
}

function log_critical () {
    LOG_DEFAULT_PRIORITY=crit $INTERNAL_LOG_SCRIPT
}

function log_notice () {
    LOG_DEFAULT_PRIORITY=notice $INTERNAL_LOG_SCRIPT
}

function log_warning () {
    LOG_DEFAULT_PRIORITY=warning $INTERNAL_LOG_SCRIPT
}

function log_info () {
    LOG_DEFAULT_PRIORITY=info $INTERNAL_LOG_SCRIPT
}

function log () {
    $INTERNAL_LOG_SCRIPT
}

